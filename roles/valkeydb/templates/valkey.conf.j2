dir "/data"
port {{valkey_port + services[cluster][subcluster][service]['port_offset']}}
requirepass {{secrets[cluster][subcluster][service]['password']}}
masterauth {{secrets[cluster][subcluster][service]['password']}}

aclfile /data/users.acl

loglevel NOTICE
logfile /valkey_log/valkey-server.log

maxmemory {{services[cluster][subcluster][service]['maxmemory']}}
maxmemory-policy volatile-lru
min-slaves-max-lag 5
min-slaves-to-write 1
rdbchecksum yes
rdbcompression yes

{% if services[cluster][subcluster][service]['client-output-buffer-limit'] is defined %}
client-output-buffer-limit {{ services[cluster][subcluster][service]['client-output-buffer-limit'] }}
{% endif %}        

{% if services[cluster][subcluster][service]['repl-backlog-size'] is defined %}
repl-backlog-size {{ services[cluster][subcluster][service]['repl-backlog-size'] }}
{% endif %}

repl-diskless-sync {{ services[cluster][subcluster][service]['repl-diskless-sync'] | default('yes') }}
repl-diskless-sync-delay 5

# Latency monitor (like slow log) ms
latency-monitor-threshold 10

replica-announce-ip {{ __current_host }}
replica-announce-port {{valkey_port + services[cluster][subcluster][service]['port_offset']}}
replicaof localhost 0

# AOF
appendonly yes
auto-aof-rewrite-percentage 100
auto-aof-rewrite-min-size 64mb
aof-use-rdb-preamble yes
save ""

# Replica priority
{% if ansible_hostname.endswith('3') %}
replica-priority 100
{% else %}
replica-priority 10
{% endif %}
